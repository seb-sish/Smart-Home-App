<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="FloatingBtnTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorOnSecondary">@color/whiteDarker</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_edittext</item>

        <item name="android:ems">10</item>
        <item name="android:textAppearance">@style/DefaultTextAppearance</item>
    </style>

    <style name="DefaultTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="bigButtonsStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="bigButtonTextAppearance" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">3dp</item>
        <item name="boxStrokeColor">@color/orange</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="deviceImageBtnStyle">
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:backgroundTint">?attr/cardBackgroundColor</item>
    </style>
    <style name="deviceTextAppearance" parent="DefaultTextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="deviceHeaderTextAppearance" parent="DefaultTextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
</resources>